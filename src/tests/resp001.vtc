varnishtest "resp001"

server s1 {
    rxreq
    expect req.url == "/"
    txresp
} -start

varnish v1 -vcl+backend {
import mruby;
	sub vcl_deliver{
	  set resp.http.hello = mruby.exec_str("'hello'");
	}
} -start

client c1 {
    txreq -url "/"
    rxresp
    expect resp.http.hello == "hello"
    expect resp.status == 200
} -run

